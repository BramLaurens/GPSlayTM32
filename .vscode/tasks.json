{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build STM32 Project",
      "type": "shell",
      "command": "make -C Debug all",    // or Release if that's your build folder
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    },
    {
      "label": "Clean STM32 Project",
      "type": "shell",
      "command": "make -C Debug clean"
    }
  ]
}
